<!DOCTYPE html>
<html>
  <head>
    <title>Trade Bot Settings</title>
    <link rel='stylesheet' href='/css/style.css' />
    
    <% include bootstrap %>
  </head>
  <body>

    <% include nav %>

    <div class="jumbotron">
      <div class="container-fluid">
        <h1>Settings</h1>
        <p>Use the forms below to Update the Bot settings</p>
      </div>
    </div>

    <% include flash %>

    <div class="container-fluid">
      
      <form class="form-horizontal" role="form" method="POST" action="/settings/user">
        <div class="row">
          <div class="form-group">
            <h4>User Settings</h4>
            
            <div class="form-group">  
              <label for="user" class="col-lg-2 control-label">Old Password</label>
              <div class="col-lg-10">  
                <input type="text" class="form-control" name="user[oldpass]" id="oldpass" placeholder="Username" required autofocus />
              </div>  
            </div>

            <div class="form-group">  
              <label for="pass" class="col-lg-2 control-label">New Password</label> 
              <div class="col-lg-10"> 
                <input type="password" class="form-control" name="user[newpass]" id="newpass" placeholder="Password" required /> 
              </div>
            </div>

          </div>
        </div>

        <div class="form-group">  
          <div class="col-lg-10">  
            <button type="submit" class="btn btn-primary" name="setup" value="setup">Submit</button>  
          </div>  
        </div>
      </form>

      <form class="form-horizontal" role="form" method="POST" action="/settings/bot">
        <div class="row">
          
          <div class="col-lg-8">

            <div class="form-group">
              <h4>Bot Settings</h4>

              <div class="form-group">  
                <label for="name" class="col-lg-2 control-label">Bot Name</label>  
                <div class="col-lg-10">
                  <input type="text" class="form-control" name="app[name]" id="name" placeholder="Name"  required 
                    <% if (config.name) { %>
                      value="<%=  config.name %>"
                    <% } %>
                  /> 
                </div>  
              </div>

              <div class="form-group">  
                <label for="key" class="col-lg-2 control-label">App API Key</label>  
                <div class="col-lg-10">  
                  <input type="text" class="form-control" name="app[key]" id="key" placeholder="API Key" required
                    <% if (config.key) { %>
                      value="<%= config.key%>"
                    <% }%>
                  />
                </div>  
              </div>  

              <div class="form-group">  
                <label for="secret" class="col-lg-2 control-label">App Secret</label>  
                <div class="col-lg-10">
                  <input type="text" class="form-control" name="app[secret]" id="secret" placeholder="Secret"required
                    <% if (config.secret) { %> 
                      value="<%= config.secret %>"
                    <% } %> 
                  /> 
                </div>  
              </div>

            </div>

            
          </div>


          <div class="col-lg-3 col-lg-offset-1">
            <div class="form-group">
              <h4>Pairs to Track</h4>
              <% for (var i = 0; i < possiblePairs.length; i++) { %>
                <div class=" col-lg-12 checkbox">  
                  <label for="user" class="">
                    <%= possiblePairs[i] %>
                    <input type="checkbox" class="" name="pairs[]" id="<%= possiblePairs[i] %>" value="<%= possiblePairs[i] %>" <% if(config.pairs.indexOf(possiblePairs[i]) >= 0) { %>checked<% }%> />
                  </label> 
                </div>
              <% } %>
            </div>
          </div>
        
        </div>

        
        <div class="form-group">  
          <div class="col-lg-10">  
            <button type="submit" class="btn btn-primary" name="setup" value="setup">Submit</button>  
          </div>  
        </div>
        

      </form>
    </div>
      
    
  </body>
</html>